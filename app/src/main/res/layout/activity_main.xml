<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ciazhar.websitesourcecodeapp.MainActivity">

    <TextView
        android:id="@+id/main_get_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter URL!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Spinner
        android:id="@+id/main_protocol_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_get_url"
        >
    </Spinner>
    <EditText
        android:id="@+id/main_url_input"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/main_protocol_spinner"
        />
    <Button
        android:id="@+id/main_button_get_page_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Page Source"
        android:layout_below="@+id/main_protocol_spinner"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/main_button_get_page_source"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Page Source Should Appear Here"
                />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
